<% provide :title, t(".publishers_title") %>

<div class="well well-small text-center"><h1><%= t ".publishers" %></h1></div>

<div class="row heigh_table_with_button">
  <div class="col-md-2">
    <%= link_to "#", class: "btn btn-primary",
      data: {toggle: "modal", target: "#modal_create_pub"} do %>
      <span><i class="fa fa-plus-square" aria-hidden="true"></i></span>
      <%= t ".new_publisher_button" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <button class="btn btn-success btn_space">
      <%= link_to admin_export_pub_excel_index_path(params.merge(format: :xls).permit!) do %>
        <span><i class="fa fa-download" aria-hidden="true"></i></span>
        <%= t ".export_to_excel" %>
      <% end %>
    </button>
  </div>
  <div class="col-md-8">
    <%= form_tag admin_publishers_path, method: :get do %>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t(".input_publishers_name") %>
          <span class="input-group-btn">
            <%= button_tag type: "submit", class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-search" ></span>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div><br><br>

<%= render "admin/publishers/table_data" %>
<%= render "admin/publishers/modal_create" %>

<div class="modal publisher-modal-edit">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="modal_edit_pub_label">
          <%= t ".update_pub_title" %>
        </h4>
      </div>
      <div class="modal-body-publisher-edit">

      </div>
    </div>
  </div>
</div>
