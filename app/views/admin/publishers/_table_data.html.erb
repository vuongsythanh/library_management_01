<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t ".index" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @publishers.any? %>
      <%= render "sub_table_data" %>
    <% else %>
      <tr>
        <td colspan="6" class="text-center no-data"><%= t ".no_data" %></td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <tr>
      <th><%= t ".index" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class="col-lg-7">
    <%= t ".show" %><%= Settings.publisher.per_page %><%= t ".of" %>
    <%= @publisher_size %><%= t ".record" %>
  </div>
  <div class="col-lg-5">
    <%= paginate @publishers, theme: "twitter-bootstrap-3" %>
  </div>
</div>
