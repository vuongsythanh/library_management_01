<% provide :title, t(".categories_title") %>

<div class="well well-small text-center"><h1><%= t ".categories" %></h1></div>

<div class="row heigh_table_with_button">
  <div class="col-md-2">
    <%= link_to "#", class: "btn btn-primary",
      data: {toggle: "modal", target: "#modal_create_cate"} do %>
      <span><i class="fa fa-plus-square" aria-hidden="true"></i></span>
      <%= t ".new_category_button" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <button class="btn btn-success btn_space">
      <%= link_to admin_export_cate_excel_index_path(params.merge(format: :xls).permit!) do %>
        <span><i class="fa fa-download" aria-hidden="true"></i></span>
        <%= t ".export_to_excel" %>
      <% end %>
    </button>
  </div>
  <div class="col-md-8">
    <%= form_tag admin_categories_path, method: :get do %>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t(".input_categories_name") %>
          <span class="input-group-btn">
            <%= button_tag type: "submit", class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </span>
        </div>
      </div>
    <% end  %>
  </div>
</div>
<br><br>

<%= render "table_data" %>
<%= render "modal_create" %>

<div class="modal category-modal-edit">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="modal_edit_cate_label">
          <%= t ".update_cate_title" %>
        </h4>
      </div>
      <div class="modal-body-category-edit">

      </div>
    </div>
  </div>
</div>
