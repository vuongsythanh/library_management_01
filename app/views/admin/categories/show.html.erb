<% provide :title, t(".category_book_title") %>
<div class="well well-small">
  <h1><%= t ".categories" %> - <%= @category_book.first.category.name %></h1>
</div>

<div class="row heigh_table_with_button">
  <div class="col-md-2">
    <%= link_to "#", class: "btn btn-primary",
      data: {toggle: "modal", target: "#modal_create_book"} do %>
      <span><i class="fa fa-plus-square" aria-hidden="true"></i></span>
      <%= t ".new_book_button" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <button class="btn btn-default btn-space">
      <%= link_to "#" do %>
        <span><i class="fa fa-download" aria-hidden="true"></i></span>
        <%= t ".export_to_excel" %>
      <% end %>
    </button>
  </div>
  <div class="col-md-8">
    <%= form_tag "#", method: :get do %>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t(".input_books_name") %>
          <span class="input-group-btn">
            <%= button_tag type: "submit", class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".book" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @category_book.any? %>
      <%= render "sub_show" %>
    <% else %>
      <tr>
        <td colspan="7" class="text-center no-data"><%= t ".no_data" %></td>
      </tr>
    <% end %>
  </tbody>
   <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".book" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
</table>
<div class="row">
  <div class="col-lg-7">
     <%= t ".show" %><%= Settings.books.per_page %><%= t ".of" %>
     <%= Book.all.size %><%= t ".record" %>
  </div>
  <div class="col-lg-5">
    <%= paginate @category_book, theme: "twitter-bootstrap-3" %>
  </div>
</div>
<div class="pull-right">
  <%= link_to :back, class: "btn btn-default" do %>
    <span><i class="fa fa-reply" aria-hidden="true" ></i></span>
    <%= t ".back" %>
  <% end %>
</div>
