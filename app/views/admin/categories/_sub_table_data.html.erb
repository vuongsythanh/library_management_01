<% @categories.each_with_index do |category, index| %>
  <tr>
    <td class="text-center">
      <% params[:page] ||= Settings.categories.params_page %>
      <%= index_continue params[:page], index, Settings.categories.per_page %>
    </td>
    <td><%= link_to category.name, admin_category_path(category) %></td>
    <td class="text-center"><%= category.books.size %></td>
    <td class="text-center">
      <%= link_to edit_admin_category_path(category), title: t(".edit"),
        class: "btn-edit-category btn btn-warning" do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>
    </td>
    <td class="text-center">
      <%= link_to admin_category_path(category), title: t(".delete"),
        method: :delete,
        data: {confirm: t(".are_you_sure")}, class: "btn btn-danger" do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </td>
  </tr>
<% end %>
