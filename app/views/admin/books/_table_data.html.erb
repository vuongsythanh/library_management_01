<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".book" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @books.any? %>
      <%= render "sub_table_data" %>
    <% else %>
      <tr>
        <td colspan="7" class="text-center no-data"><%= t ".no_data" %></td>
      </tr>
    <% end %>
  </tbody>
   <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".book" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".show" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class="col-lg-7">
    <%= t ".show" %><%= Settings.books.per_page %><%= t ".of" %>
    <%= @book_size %><%= t ".record" %>
  </div>
  <div class="col-lg-5">
    <%= paginate @books, theme: "twitter-bootstrap-3" %>
  </div>
</div>
