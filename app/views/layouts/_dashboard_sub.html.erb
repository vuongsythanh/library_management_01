<div id="wrapper">
  <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to t(".Library_Management"), root_path, class: "navbar-brand" %>
    </div>
    <!-- Top Menu Items -->
    <ul class="nav navbar-right top-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-language"></i>  <%= t ".languages" %><b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to_unless I18n.locale == :vn, t(".vietnam"), locale: :vn %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to_unless I18n.locale == :en, t(".english"), locale: :en %>
          </li>
        </ul>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-user"></i> <%= current_user.name %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to logout_path, method: :delete do %>
              <i class="fa fa-fw fa-power-off"></i><span>Log out</span>
            <% end  %>
          </li>
        </ul>
      </li>
    </ul>
    <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav nav_border">
        <li class="active">
          <%= link_to admin_root_path do %>
            <i class="fa fa-home"></i>
            <span><%= t ".Home" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_categories_path do %>
            <i class="fa fa-folder-open"></i>
            <span><%= t ".Categories" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_books_path do %>
            <i class="fa fa-book"></i>
            <span><%= t ".Books" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_authors_path do %>
            <i class="fa fa-user-o"></i>
            <span><%= t ".Authors" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_publishers_path do %>
            <i class="fa fa-university"></i>
            <span><%= t ".Publishers" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-fw fa-arrows-v"></i>
            <span><%= t ".Request_books" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path do %>
            <i class="fa fa-users"></i>
            <span><%= t ".Users" %></span>
          <% end %>
        </li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </nav>

  <div id="page-wrapper">
    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: "alert alert-#{type}" %>
    <% end %>
    <%= yield %>
  </div>
</div>
